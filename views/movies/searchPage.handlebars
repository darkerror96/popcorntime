<main>
  <h1>Movies Found</h1>
  <br />

  <h2>Top 10 list of Movies based on your search for `{{searchTerm}}`</h2>
  <br />

  <div class="cards-list">
  {{#each movies}}
    <a href="/movies/{{_id}}">
      <div class="card 1">
        <div class="card_image">
          <img alt="Poster for {{movie.name}}" src="{{poster}}" title="{{name}}"/>
          <div class="title-black"> {{name}}</div>
        </div>
      </div>
      <br>
    </a>
  {{/each}}  
  </div>

  <br />
  <br />

  <nav>
    <button class="btn btn-info">
      <i class="glyphicon glyphicon-search"></i>
      <a href="/" class="back">Make another search</a>
    </button>
  </nav>
</main>