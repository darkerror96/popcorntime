<form id="addMovieForm">
  <h1>Add Movie</h1>
  <br> <br>

  <label for="movieName">
    Movie Name: <br><input type="text" id="movieName" />
  </label>
  <br> <br>

  <label for="movieSummary">
    Summary: <br><textarea id="movieSummary" rows="3" cols="80"></textarea>
  </label>
  <br> <br>

  <label for="movieGenres">
    Genres: <br><textarea id="movieGenres" placeholder="Enter Genre/s followed by `,`" rows="2" cols="50"></textarea>
  </label>
  <br> <br>

  <label for="movieDuration">
    Duration (in mins): <br><input type="number" id="movieDuration" min="1" max="5000" />
  </label>
  <br> <br>

  <label for="moviePoster">
    Poster: <input type="file" name="moviePoster" id="moviePoster" accept="image/*" />
  </label>
  <br> <br>

  <label for="movieReleaseDate">
    Release Date: <br><input type="date" id="movieReleaseDate" min="1888-01-01" max="2030-12-31" />
  </label>
  <br> <br>

  <label for="movieCast">
    Cast: <br><textarea id="movieCast" placeholder="Enter Actor Name/s followed by `,`" rows="2" cols="60"></textarea>
  </label>
  <br> <br>

  <label for="movieDirector">
    Director: <br><textarea id="movieDirector" placeholder="Enter Director Name/s followed by `,`" rows="2"
      cols="50"></textarea>
  </label>
  <br> <br>

  <div id="errorMessageDiv" class="alert alert-danger hidden" role="alert"></div>

  <button type="submit" class="btn btn-primary">
    <i class="glyphicon glyphicon-plus"></i> Add Movie
  </button>
</form>

<br> <br>
<div id="successMessageDiv" class="alert alert-success hidden" role="alert"></div>

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
  crossorigin="anonymous"></script>

<script src="/public/js/add_movie.js"></script>