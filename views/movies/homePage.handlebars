
  <h1>Flick Finder</h1>

  <p>This application is the one-stop shop for anything related to Movies! You
    can search for any movie, actor, director, etc. and get the information you
    are looking for.</p>
  <br />

  <form action="/search" method="POST" class="new-search-form">
    Search Movies

    <select id="movieInfo" name="options" placeholder="Choose from selection">
      {{#each option}}
        <option>{{this}}</option>
      {{/each}}
    </select>

    <label>
      <input
        type="text"
        name="searchTerm"
        placeholder="Enter Movie Name"
        value="{{movies.searchTerm}}"
      />
    </label>
    <button type="submit" class="btn btn-info">
      <i class="glyphicon glyphicon-search"></i>
      Search
    </button>
  </form>

  <h3>
    Recommendations
  </h3>
  <h5>
    {{actorHeading}}
    {{#each actor}}
    <a href="/movies/{{_id}}">
      <li>
        {{name}}
      </li>
    </a>
    {{/each}}
  </h5>
  
  
  <h5>{{directorHeading}}
    {{#each director}}
    <a href="/movies/{{_id}}">
      <li>
        {{name}}
      </li>
    </a>
  {{/each}}
  </h5>
  <h5>{{genreHeading}}
  {{#each genre}}
    <a href="/movies/{{_id}}">
      <li>
        {{name}}
      </li>
    </a>
  {{/each}}
  </h5>
